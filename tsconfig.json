{
  "compilerOptions": {
    "outDir": "build",
    "lib": [ "es6", "dom" ],
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**.ts", "gen/**.ts"],
  "exclude": ["src/**.test.ts"]
}
